{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": false
  },
  "typeRoots": ["./types", "./node_modules/@types"],
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
